  "homepage": "https://github.com/jmperez/promise-throttle",
  "description": "A library to throttle promises",
  "main": "lib/main.js",
  "author": "Jose M. Perez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmperez/promise-throttle.git"
