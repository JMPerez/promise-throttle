env:
    node: true

rules:
    brace-style: [2, "1tbs"]
    comma-style: [2, "last"]
    curly: 2
    default-case: 2
    eqeqeq: 2
    func-style: [1, "declaration"]
    guard-for-in: 2
    indent: [2, 2]
    new-cap: 0
    no-debugger: 2
    no-empty: 2
    no-floating-decimal: 2
    no-nested-ternary: 2
    no-undefined: 2
    no-underscore-dangle: 0
    no-unreachable: 2
    radix: 2
    quotes: 'single'
    space-after-function-name: [2, "never"]
    space-after-keywords: [2, "always"]
    space-before-blocks: 2
    spaced-line-comment: [2, "always", { exceptions: ["-"]}]
    strict: [2, "global"]
    valid-jsdoc: [2]
    wrap-iife: 2
